@Library('piper-lib-os') _
fioriOnCloudPlatformPipeline script:this


node {
    echo 'Staging Components...'
    
    stage ('Creating build tag') {
        createTag nexusInstanceId: 'localnexus', tagAttributesJson: '{"createdBy" : "Tim"}'
    }
    stage ('Publishing') {
         nexusPublisher nexusInstanceId: 'localnexus', nexusRepositoryId: 'maven-releases', packages: [[$class: 'MavenPackage', mavenAssetList: [[classifier: '', extension: '', filePath: 'war/target/jenkins.war']], mavenCoordinate: [artifactId: 'jenkins-war', groupId: 'org.jenkins-ci.main', packaging: 'war', version: '2.23']]]
    }
    stage ('Move') {
        moveComponents destination: 'maven-test', nexusInstanceId: 'localnexus'
    }
    stage ('Delete') {
        deleteComponents nexusInstanceId: 'localnexus'
    } 
}





